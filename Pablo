    {name = "EndFlightThreshold", value = 7},
    {name = "FreeKickArcDuration", value = 0.5},
    {name = "FreeKickUpwardForce", value = 50},
    {name = "UpdateMultiplier", value = 6.5},
    {name = "MaxClamp", value = 300},
}

