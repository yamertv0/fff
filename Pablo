local function createContentButton(parent, name, pos, callback)
    local btn = Instance.new("TextButton")
    btn.Name = name.."Button"
    btn.Size = UDim2.new(0,180,0,40)
    btn.Position = pos
    btn.BackgroundColor3 = Color3.fromRGB(90,90,90)
    btn.Text = name
    btn.TextColor3 = Color3.new(1,1,1)
    btn.Font = BUTTON_FONT
    btn.TextSize = 20
    btn.Parent = parent
    local uic = Instance.new("UICorner", btn)
    uic.CornerRadius = UDim.new(0, BUTTON_CORNER)
    btn.MouseButton1Click:Connect(callback)
end

createContentButton(customTab, "Pablo", UDim2.new(0,20,0,20), function() 
    -- Здесь загружается модуль Pablo (этот скрипт)
    -- Обычно он уже загружен, поэтому просто сохраняем ссылку в runningScripts
    _G.PabloModule = PabloModule
end)
createContentButton(customTab, "Prince", UDim2.new(0,20,0,70), function() 
    -- Загрузка других модулей по аналогии
end)
createContentButton(customTab, "Kaiser", UDim2.new(0,20,0,120), function() 
    -- Загрузка других модулей по аналогии
end)
createContentButton(customTab, "Loki", UDim2.new(0,20,0,170), function() 
    -- Загрузка других модулей по аналогии
end)

